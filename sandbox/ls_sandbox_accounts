#!/bin/bash
#
# List all sandbox accounts.

#set -o nounset
set -o errexit
set -o pipefail

# Include libraries
readonly SCRIPT_LIB_HOME="$(cd "$(dirname "$0")"; pwd -P)/lib"
source "${SCRIPT_LIB_HOME}/output_utils.sh"
source "${SCRIPT_LIB_HOME}/load_script_conf.sh"

# Set variables
readonly USERNAME_INIT="${SANDBOX_USERNAME_INIT-${DEFAULT_USERNAME_INIT}}"

# List usernames according to the specified pattern
cut -d: -f1 /etc/passwd | grep "${USERNAME_INIT}.*"

# End of script
exit "$?"
